{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "files": {
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "bun.lock",
      "global.css",
      ".sst",
      "sst-env.d.ts"
    ]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "warn",
        "noEmptyCharacterClassInRegex": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noShadowRestrictedNames": "off",
        "noImplicitAnyLet": "off",
        "noAssignInExpressions": "off",
        "noConsoleLog": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useValidAriaValues": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noUselessSwitchCase": "off",
        "noUselessFragments": "error"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    },
    "ignore": [".env.local"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  }
}
